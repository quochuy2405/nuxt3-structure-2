{
    // https://nuxt.com/docs/guide/concepts/typescript
    "extends": "./.nuxt/tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["components/*"],
            "@/hooks/*": ["hooks/*"],
            "@/mocks/*": ["mocks/*"],
            "@/pages/*": ["pages/*"],
            "@/metadata/*": ["metadata/*"],
            "@/styles/*": ["styles/*"],
            "@/types/*": ["types/*"],
            "@/assets/*": ["assets/*"],
            "@/contexts/*": ["contexts/*"],
            "@/utils/*": ["utils/*"],
            "@/constants/*": ["constants/*"],
            "@/providers/*": ["providers/*"],
            "@/layouts/*": ["layouts/*"],
            "@/stores/*": ["stores/*"],
            "@/resolvers/*": ["resolvers/*"],
            "@/composables/*": ["composables/*"]
        },
        "incremental": true
    }
}
